.modal.fade(tabindex='-1' role='dialog' aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content
      form(data-on-submit=self.apiPath + ':submit')
        .modal-header
          h4.modal-title=self.t('title')
          button.btn-close(type='button' tabindex='-1' data-bs-dismiss='modal')

        .modal-body
          .mb-3
            textarea.form-control(name='categories')= self.categories.join(', ')
            .form-text= self.t('help')

        .modal-footer
          button.btn.btn-secondary(type='button' tabindex='6' data-bs-dismiss='modal')=self.t('cancel')
          button.btn.btn-danger(type='submit' tabindex='7')=self.t('ok')
